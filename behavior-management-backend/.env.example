# ==============================================
# BEHAVIOR MANAGEMENT SYSTEM - ENVIRONMENT CONFIG
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration  
DATABASE_URL="file:./prisma/dev.db"
# For production PostgreSQL: 
# DATABASE_URL="postgresql://username:password@localhost:5432/behavior_management"

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# School Configuration (Default settings)
DEFAULT_SCHOOL_NAME=Sample School
DEFAULT_ACADEMIC_YEAR=2024-2025

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_BULK_UPLOAD=true

# ==============================================
# POSTGRESQL CONFIGURATION (Production)
# ==============================================

# Database Type (sqlite | postgresql)
DB_TYPE=postgresql

# PostgreSQL Connection Details
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_NAME=behavior_management
DB_SCHEMA=public

# PostgreSQL Security & Performance
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Database Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"

# Example Production PostgreSQL URLs:
# DATABASE_URL="postgresql://user:password@localhost:5432/behavior_management?sslmode=require"
# DATABASE_URL="postgresql://user:password@prod-db.amazonaws.com:5432/behavior_management?sslmode=require"

